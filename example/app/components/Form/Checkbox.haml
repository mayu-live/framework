:ruby
  classname = [
    styles[:checkbox],
    $class,
  ].compact.join(" ")

  group_classname = [
    styles.group,
    $group_class,
  ].compact.join(" ")

  id = "checkbox-#{vnode_id}"

%div(class=group_classname)
  %input(id=id){
    class: classname,
    type: "checkbox",
    placeholder: $label,
    **props.except(:label),
  }
  %label(for=id)
    = $label
