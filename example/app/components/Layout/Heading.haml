  level = $level.to_i.clamp(1, 6)
  tag = :"h#{level}"

  H[
    tag,
    H.slot(self),
    **self.class.merge_props(
      $*.except(:level),
      { class: [:h, tag] },
      { class: $class },
    )
  ]
