:ruby
  Heading = import("/app/components/Layout/Heading")

  translations("en-US", "sv-SE")

  Entry = import("./Entry")
  FileContents = import("./FileContents")

  def self.get_initial_state(**props) = {
    selected_path: nil
  }

:css
  .browser {
    display: grid;
    gap: 1em;
    grid-template-columns: 1fr;
    align-items: start;
  }

  .list {
    padding: 1em;
    margin: 0;
    background: var(--yellow-bright);
    border: 1px solid var(--yellow);
    border-radius: 2px;
  }

  .right {
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .browser {
      grid-template-columns: 1fr 3fr;
    }
  }

- root = File.expand_path(".")

%article(lang=lang)
  %Heading(level=2)= t(:title)

  %p
    = t(:description)
    %a(href="https://github.com/mayu-live/framework/tree/main/example/app")<

  .browser
    %ul.list
      %Entry(initial_open root=root){path: "app"}
    .right
      %FileContents(root=root){path: props.dig(:request, :query, :file)}
