def icon
  case File.extname(props[:path])
  when ".rb", ".rux"
    "📝"
  when ".css"
    "🖨️"
  when ".png"
    "🖼️"
  else
    "📄"
  end
end

def render
  list_style_type = "'\\%s'" % icon.codepoints.first.to_s(16)

  <li class={styles[:file]} style={{ list_style_type: }}>
    {File.basename(props[:path])}
  </li>
end
